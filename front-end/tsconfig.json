{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@test-utils/*": ["./test-utils/*"],
      "@utils/*": ["./utils/*"]
    },
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": ["**/__tests__/*"]
}
